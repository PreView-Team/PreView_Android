<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView20"
            style="@style/text_headline_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="61dp"
            android:text="추가정보"
            android:textColor="#121926"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="정보를 입력해주세요."
            android:textColor="#121926"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView35"
            style="@style/text_main_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="닉네임"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_nickname"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:endIconDrawable="@drawable/ic_baseline_check_overlap"
            app:endIconMode="custom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView35">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_nickname"
                style="@style/text_caption_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름 입력" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView36"
            style="@style/text_main_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="관심 직군"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_nickname" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView36">

            <!--            <com.google.android.material.textfield.TextInputEditText-->
            <!--                android:id="@+id/et_jobname"-->
            <!--                style="@style/text_caption_light"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:hint="직군 입력" />-->

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/light_blue"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView36">

            <CheckBox
                android:id="@+id/check_pm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/primary"
                android:text="PM" />

            <CheckBox
                android:id="@+id/check_design"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/primary"
                android:text="디자인" />

            <CheckBox
                android:id="@+id/check_marketing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/primary"
                android:text="마케팅" />

            <CheckBox
                android:id="@+id/check_programming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/primary"
                android:text="프로그래밍" />
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            style="@style/text_main_semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="다음"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary"
            app:cornerRadius="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>